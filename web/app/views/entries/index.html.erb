<div class="container">
  <% @entries.each do |entry| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <b><%= link_to entry.title, entry.url, :target => "_blank" %></b> - <i> published <%= time_ago_in_words(entry.published) %> ago.</i><br>
        	<br>
        	<%= unless entry.content.nil?
        		simple_format(entry.content.gsub('[BREAK]', '<p>'))
        	end %>
      </div>
    </div>
  <% end %>
</div>